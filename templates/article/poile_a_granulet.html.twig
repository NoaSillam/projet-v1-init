                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        var screenWidth = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;
                        var contentOrdi = $('.contentOrdi');
                        var contentMobile = $('.contentMobile');

                        if (screenWidth > 768) {
                            // Code à exécuter pour les écrans larges
                            contentOrdi.show();
                            contentMobile.hide();
                        } else {
                            // Code à exécuter pour les écrans étroits
                            contentOrdi.hide();
                            contentMobile.show();
                        }
                    });

                    document.addEventListener("DOMContentLoaded", function () {
                        // ... (votre code pour afficher/masquer en fonction de la largeur de l'écran)

                        // Initialisation du carousel desktop
                        $('#carouselExampleIntervalDesktop').carousel();

                        // Initialisation du carousel mobile
                        $('#carouselExampleIntervalMobile').carousel();
                    });
                </script>
