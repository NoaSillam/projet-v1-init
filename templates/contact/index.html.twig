{% endblock %}
{% block body %}
    {{ include('base.html.twig') }}
    <br>
    <h1 style="text-align:center;">Nos fiches de contacts</h1>
<div style="margin: auto; width: 90%;">
    <div style="margin-left:auto; margin-right:auto;">
        <a href="{{ path('app_contact_new')}}" class="btn btn-secondary">Ajouter une nouvelle fiche de contact</a>
        <br>
        <br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Mail</th>
                <th>Description</th>
                <th>DateDemande</th>
                <th>Telephone</th>
                <th style="text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.nom }}</td>
                <td>{{ contact.prenom }}</td>
                <td>{{ contact.mail }}</td>
                <td>{{ contact.description }}</td>
                <td>{{ contact.dateDemande ? contact.dateDemande|date('Y-m-d H:i:s') : '' }}</td>
                <td>0{{ contact.telephone }}</td>
                <td style="display: flex; align-items: center; justify-content: center;  " >

                    <a class="btn btn-success" href="{{ path('app_contact_show', {'id': contact.id}) }}" style="width:60px;  height:40px; margin-right: 10px;"><img src="{{asset( 'assets/images/plus.png') }}" class="card-img-top" style="width:25px;" alt=""></a>
                    <a class="btn btn-info" href="{{ path('app_contact_edit', {'id': contact.id}) }}" style="width:60px;  height:40px; margin-right: 10px;"><img src="{{asset( 'assets/images/modifier.png') }}" class="card-img-top" style="width:25px;" alt=""></a>
                    <div style="  height:40px;">  {{ include('contact/_delete_form.html.twig') }}</div>


                </td>
{#                <td>#}
{#                    <a href="{{ path('app_contact_show', {'id': contact.id}) }}">show</a>#}
{#                    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>#}
{#                </td>#}
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <br>
        <br>
        <br>
        <br>
    </div>
</div>
{% endblock %}
