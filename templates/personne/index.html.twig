{% endblock %}
{% block body %}
    {{ include('base.html.twig') }}
    <br>
    <h1 style="text-align:center;">Le nombre de Personne</h1>
<div style="margin: auto; width: 90%;">
    <div style="margin-left:auto; margin-right:auto;">
        <a href="{{ path('app_personne_new')}}" class="btn btn-secondary">Ajouter un nouveau nombre de personne</a>
        <br>
        <br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NbPersonne</th>
                <th  style="text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td>{{ personne.id }}</td>
                <td>{{ personne.nbPersonne }}</td>
                <td style="display: flex; align-items: center; justify-content: center;  " >

                    <a class="btn btn-success" href="{{ path('app_personne_show', {'id': personne.id}) }}" style="width:60px;  height:40px; margin-right: 10px;"><img src="{{asset( 'assets/images/plus.png') }}" class="card-img-top" style="width:25px;" alt=""></a>
                    <a class="btn btn-info" href="{{ path('app_personne_edit', {'id': personne.id}) }}" style="width:60px;  height:40px; margin-right: 10px;"><img src="{{asset( 'assets/images/modifier.png') }}" class="card-img-top" style="width:25px;" alt=""></a>
                    <div style="  height:40px;">  {{ include('personne/_delete_form.html.twig') }}</div>


                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <br>
        <br>
        <br>
        <br>
    </div>
</div>


{% endblock %}
