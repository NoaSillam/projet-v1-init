{% block body %}
    {{ include('base.html.twig') }}
    <br>
    <a href="{{ path('app_tranche_index') }}" class="btn btn-dark" style="margin-left:3%;">Retour</a>
    <h1 style="text-align: center;">Tranche</h1>
<div style="margin: auto; width: 80%;">
    <div style="margin-left:auto; margin-right:auto;">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tranche.id }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ tranche.debut }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ tranche.Fin }}</td>
            </tr>
            <tr>
                <th>Menage</th>
                <td>{{ tranche.Menage.Nom }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ tranche.Region.Nom }}</td>
            </tr>
            <tr>
                <th>Nb Personne</th>
                <td>{{ tranche.nbPersonne.nbPersonne }}</td>
            </tr>
            <tr>
                <th>Prime</th>
                <td>{{ tranche.Prime.Nom }}</td>
            </tr>
            <tr>
                <th>Aide</th>
                <td>{{ tranche.Prime.aide }}</td>
            </tr>
            <tr>
                <th>Chauffage</th>
                <td>{{ tranche.TypeDevis.Nom | default('N/A') }}</td>
            </tr>
            <tr>
                <th>Modifier :</th>
                <td><a class="btn btn-info" href="{{ path('app_tranche_edit', {'id': tranche.id}) }}" style="width:60px; height:100%;"> <img src="{{asset( 'assets/images/modifier.png') }}" class="card-img-top" style="width:25px;" alt=""></a></td>
            </tr>
            <tr>
                <th>Supprimer :</th>
                <td>  {{ include('tranche/_delete_form.html.twig') }}</td>
            </tr>
        </tbody>
    </table>
    </div>
</div>

{% endblock %}
