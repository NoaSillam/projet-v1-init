{% block body %}
    {{ include('base.html.twig') }}
<br>
<h1 style="text-align: center;">Les Tranches Fiscal</h1>
<div style="margin: auto; width: 90%;">
    <div style="margin-left:auto; margin-right:auto;">
        <a href="{{ path('app_tranche_fiscal_new')}}" class="btn btn-secondary">Ajouter une nouvelle tranche fiscal</a>
        <br>
        <br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Debut</th>
                <th>Fin</th>
                <th style="text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tranche_fiscal in tranche_fiscals %}
            <tr>
                <td>{{ tranche_fiscal.id }}</td>
                <td>{{ tranche_fiscal.Debut }}€</td>
                <td>{{ tranche_fiscal.Fin | default('N/A') }}€</td>
                <td style="display: flex; align-items: center; justify-content: center;  " >

                    <a class="btn btn-success" href="{{ path('app_tranche_fiscal_show', {'id': tranche_fiscal.id}) }}" style="width:60px;  height:40px; margin-right: 10px;"><img src="{{asset( 'assets/images/plus.png') }}" class="card-img-top" style="width:25px;" alt=""></a>
                    <a class="btn btn-info" href="{{ path('app_tranche_fiscal_edit', {'id': tranche_fiscal.id}) }}" style="width:60px;  height:40px; margin-right: 10px;"><img src="{{asset( 'assets/images/modifier.png') }}" class="card-img-top" style="width:25px;" alt=""></a>
                    <div style="  height:40px;">  {{ include('tranche_fiscal/_delete_form.html.twig') }}</div>


                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <br>
        <br><br><br><br><br><br><br><br><br><br><br><br><br><br>
    </div>
</div>


{% endblock %}
