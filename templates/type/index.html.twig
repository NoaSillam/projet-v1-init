{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <style>

    </style>
{% endblock %}


{% block body %}
    {{ include('base.html.twig') }}
    <h1 style="text-align:center;">Type</h1>
</br>
<div style="margin: auto; width: 80%;">
    <div style="margin-left:auto; margin-right:auto;">
    <a href="{{ path('app_type_new')}}" class="btn btn-secondary">Ajouter un type</a>
</br>
</br>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col" style="text-align:center;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.id }}</td>
                <td>{{ type.Nom }}</td>
                <td style="display: flex; align-items: center; justify-content: center; ">
                    <a class="btn btn-success" href="{{ path('app_type_show', {'id': type.id}) }}" style="width:60px; height:100%; margin-right: 10px;"><img src="{{asset( 'assets/images/plus.png') }}" class="card-img-top" style="width:25px;" alt=""></a>
                    <a class="btn btn-info" href="{{ path('app_type_edit', {'id': type.id}) }}" style="width:60px; height:100%; margin-right:10px;"><img src="{{asset( 'assets/images/modifier.png') }}" class="card-img-top" style="width:25px;" alt=""></a>
                   <div style="margin-top: 16px;">{{ include('type/_delete_form.html.twig') }}</div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>

   
{% endblock %}
