{% block body %}
    {{ include('base.html.twig') }}
    <br>
    <h1 style="text-align:center;">Les type de chauffages</h1>
    <div style="margin: auto; width: 90%;">
        <div style="margin-left:auto; margin-right:auto;">
            <a href="{{ path('app_type_devis_new')}}" class="btn btn-secondary">Ajouter un nouvel type de chauffage</a>
            <br>
            <br>
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Mètre Carré</th>
                    <th style="text-align: center;">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for type_devi in type_devis %}
                    <tr>
                    <td>{{ type_devi.id }}</td>
                    <td>{{ type_devi.Nom }}</td>
                    <td>{{ type_devi.metreCarre }}</td>
                    <td style="display: flex; align-items: center; justify-content: center;  " >

                        <a class="btn btn-success" href="{{ path('app_type_devis_show', {'id': type_devi.id}) }}" style="width:60px;  height:40px; margin-right: 10px;"><img src="{{asset( 'assets/images/plus.png') }}" class="card-img-top" style="width:25px;" alt=""></a>
                        <a class="btn btn-info" href="{{ path('app_type_devis_edit', {'id': type_devi.id}) }}" style="width:60px;  height:40px; margin-right: 10px;"><img src="{{asset( 'assets/images/modifier.png') }}" class="card-img-top" style="width:25px;" alt=""></a>
                        <div style="  height:40px;">  {{ include('type_devis/_delete_form.html.twig') }}</div>


                    </td>

                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <br>
            <br>
            <br>
            <br>
        </div>
    </div>



{% endblock %}
